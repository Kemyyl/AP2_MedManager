@using System.Collections

@model IEnumerable<Ordonnance>
    <h1 class="text-center mb-6">Liste des Ordonnances</h1>
@if (Model.Count() > 0)
{
    <div class="container text-center mt-4 mb-4">
        <div class="row">
            <div class="col-1"></div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Médecin</th>
                        <th>Patient</th>
                        <th>Date début</th>
                        <th>Date fin</th>
                        <th>Posologie</th>
                        <th>Instructions spécifiques</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ordonnance in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(o => ordonnance.Medecin.UserName)</td>
                            <td>@Html.DisplayFor(o => ordonnance.Patient.Nom_p)</td>
                            <td>@Html.DisplayFor(o => ordonnance.Date_debut)</td>
                            <td>@Html.DisplayFor(o => ordonnance.Date_fin)</td>
                            <td>@Html.DisplayFor(o => ordonnance.Posologie)</td>
                            <td>@Html.DisplayFor(o => ordonnance.Instructions_specifique)</td>
                            <td>
                            <a asp-action="Detail" asp-route-id="@ordonnance.OrdonnanceId"  id="accueil" class="btn">Détails</a>
                            <a asp-action="Modifier" asp-route-id="@ordonnance.OrdonnanceId" id="accueil" class="btn">Modifier</a>
                            <a asp-action="Supprimer" asp-route-id="@ordonnance.OrdonnanceId" id="accueil" class="btn">Supprimer</a>
                            </td>
                        </tr>

                    }
        </tbody>
        </table>
        <div class="col-1"></div>
        
    </div>
    </div>

}
else
{
    <p>Il n'y a pas d'ordonnance</p>
}
    <a asp-action="Ajouter" id="accueil" class="btn btn-primary">Ajouter une nouvelle ordonnance</a>
