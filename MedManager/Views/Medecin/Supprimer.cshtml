@model Medecin

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
    </head>
    <body>
        <h2>Supprimer un Medecin</h2>

        <form asp-action="Supprimer" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nom_m" class="control-label">Nom</label>
                <input asp-for="Nom_m" class="form-control" />
                <span asp-validation-for="Nom_m" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prenom_m" class="control-label">Prenom</label>
                <input asp-for="Prenom_m" class="form-control" />
                <span asp-validation-for="Prenom_m" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date_naissance_m" class="control-label">Date de Naissance</label>
                <input asp-for="Date_naissance_m" class="form-control" type = "date"/>
                <span asp-validation-for="Date_naissance_m" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label">RÃ´le</label>
                <input asp-for="Role" class="form-control" />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Login_m" class="control-label">Identifiant</label>
                <input asp-for="Login_m" class="form-control" />
                <span asp-validation-for="Login_m" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password_m" class="control-label">Mot de passe</label>
                <input asp-for="Password_m" class="form-control" type = "password"/>
                <span asp-validation-for="Password_m" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </body>
</html>