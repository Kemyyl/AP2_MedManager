



@{

    <body>
        <h1>Liste des Medecin </h1>

        <table class="table table-dark table-striped-columns">

            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Date de Naissance</th>
                <th>Rôle</th>
                <th>Action </th>
            </tr>
            @foreach (var medecin in Model)
            {
                <tr>
                    <td>@medecin.MedecinId</td>
                    <td>@medecin.Nom_m</td>
                    <td>@medecin.Prenom_m</td>
                    <td>@medecin.Date_naissance_m</td>
                    <td>@medecin.Role</td>
                    <td><a asp-action="Detail" asp-route-id="@medecin.MedecinId"> <i class="bi bi-eye-fill"></i></a>
                    <a asp-action="Modifier" asp-route-id="@medecin.MedecinId" id="accueil" class="bi bi-pencil-fill"></a>
                    <a asp-action="Supprimer" asp-route-id="@medecin.MedecinId" id="accueil" class="bi bi-trash3-fill"></a></td>
                </tr>
            }

        </table>
        <a asp-action="Ajouter" class="btn btn-primary">Ajouter un Medecin</a>
       
    </body>
        
}

