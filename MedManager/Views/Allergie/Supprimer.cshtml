@model Allergie



<h1>Supprimer une allergie</h1>

<form asp-action="Supprimer" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="AllergieId" />
        <h2>Voulez vous vraiment supprimer l'allergie @Model.Libelle_al ?</h2>
        <br />
        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
        <input type="submit" class="btn btn-danger" value="Supprimer" />
    </div>
</form>