@using System.Collections
@model IEnumerable<Medicament>

    <h1 class="text-center mb-6">Liste des Médicaments</h1>
@if (Model.Count() > 0)
{
    <div class="container text-center mt-4 mb-4">
        <div class="row">
            <div class="col-1"></div>
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>Nom du médicament</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var medicament in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => medicament.Libelle_med)</td>
                            <td><a asp-action="Modifier" asp-route-id="@medicament.MedicamentId" id="accueil" class="bi bi-pencil-fill"></a>
                            <a asp-action="Supprimer" asp-route-id="@medicament.MedicamentId" id="accueil" class="bi bi-trash3-fill"></a></td>
                        </tr>
                    }
        </tbody>
        </table>
        <div class="col-1"></div>
        
    </div>
   <a asp-action="Ajouter" id="accueil" class="btn btn-primary">Ajouter un nouveau médicament</a>
    </div>

}
else
{
    <p>Il n'y a pas de médicament</p>
    <a asp-action="Ajouter" id="accueil" class="btn btn-primary">Ajouter un nouveau médicament</a>
}